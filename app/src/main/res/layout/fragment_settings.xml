<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/btn_secondary"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:translationZ="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/profile" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|end">

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/btn_secondary"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:translationZ="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/editUserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/edit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/btn_secondary"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:translationZ="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/saveUserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_13sdp"
                    android:src="@drawable/save" />
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userName"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_grey_stroke"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:textColorHint="@color/text_black_4th"
                android:hint="User name"
                android:inputType="textCapSentences"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/background_grey_stroke"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:textColorHint="@color/text_black_4th"
                android:hint="Mobile number"
                android:inputType="textCapSentences"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/text_black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/myRefer"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_grey_stroke"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="My refer"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/termsAndConditions"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_grey_stroke"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="T&amp;C huidelines"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_grey_stroke"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/teamBonus"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_grey_stroke"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Team bonus"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/joinWP"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_grey_stroke"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Join Whatsapp group"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>