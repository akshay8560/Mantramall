<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bottom_sheet_background"
    android:backgroundTint="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/headerTVDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/lato_bold"
        android:gravity="center|start"
        android:letterSpacing="0.1"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:text="Withdraw Money"
        android:paddingStart="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageDialog"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:text="Enter Amount :"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center"
            android:orientation="vertical">
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Day- MON to FRI"
                android:fontFamily="@font/lato"
                android:textColor="@color/text_black_3rd"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Timing- 10AM to 5 PM"
                android:fontFamily="@font/lato"
                android:textColor="@color/text_black_3rd"
                android:textSize="@dimen/_9ssp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/amountET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/textview_background_grey_stroke"
            android:fontFamily="@font/lato"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/text_black_4th"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_13ssp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance: ₹780"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/text_black_3rd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Withdrawal Tax for ₹200 to ₹1,500 : ₹50"
            android:layout_marginTop="@dimen/_10ssp"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/text_black_4th"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Withdrawal Tax for ₹1501 to ₹50k : 3%"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/text_black_4th"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T&amp;C - Your wallet must be activated"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/text_black_4th"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/cancelActionBtnWM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/text_black"
            android:backgroundTint="@color/text_black_4th"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/confirmActionBtnWM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/text_black"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>

</LinearLayout>