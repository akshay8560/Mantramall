<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/btn_background_gradient"
    android:backgroundTint="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/headerTVDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_gradient"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:text="Rules of Game"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp" />

    <TextView
        android:id="@+id/messageDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/lato_bold"
        android:gravity="start"
        android:paddingTop="@dimen/_5sdp"
        android:text="3 minutes 1 issue, 2 minutes and 30 seconds to order, 30 seconds to show lottery result. It opens all day. The total number of trade is 480 issues\n\nIf you spend ₹100 to trade, after deducting ₹2 service fee, your contract amount is ₹98.\n\n"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:text="1. Join"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/green_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:text=": IF result shows 1,3,7,9 you will get"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:gravity="start"
        android:paddingTop="@dimen/_5sdp"
        android:text="(98*2) ₹196. If shows 5, you will get (98*1.5) ₹147."
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:text="2. Join"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/red_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:text=": IF result shows 2,4,6,8 you will get"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:gravity="start"
        android:paddingTop="@dimen/_5sdp"
        android:text="(98*2) ₹196. If shows 0, you will get (98*1.5) ₹147."
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:text="3. Join"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/violet_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:text=": IF result shows 0 or 5 you will get"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="(98*4.5) ₹441."
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/actionBtnDialogRules"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btn_rounded_background_gradient"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="okay"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp" />


</LinearLayout>